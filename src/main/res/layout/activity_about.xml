<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/about_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/toolbarelevation"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="top"
                app:popupTheme="?toolbar_popup_theme">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.rks.musicx.misc.widgets.TextView
                        android:id="@+id/about_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        app:textType="header" />

                </LinearLayout>

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>
        <LinearLayout
            android:layout_below="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/about_app_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                app:cardElevation="5dp"
                style="?attr/cardStyle"
                android:elevation="@dimen/toolbarelevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:src="@mipmap/ic_launcher" />

                    <com.rks.musicx.misc.widgets.TextView
                        android:id="@+id/about_app_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:textColor="@color/white"
                        android:textSize="50sp"
                        android:textStyle="bold"
                        app:textType="header"/>

                    <TextView
                        android:id="@+id/about_app_disc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        />

                    <TextView
                        android:id="@+id/about_app_ver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingBottom="15dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="5dp"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/about_developer"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="2dp"
                app:cardElevation="5dp"
                style="?attr/cardStyle"
                android:elevation="@dimen/toolbarelevation">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/developerInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="2dp"
                        android:padding="2dp"
                        android:gravity="center"
                        android:layout_toEndOf="@+id/avatar">

                        <com.rks.musicx.misc.widgets.TextView
                            android:id="@+id/developer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            app:textType="header"
                            android:paddingStart="2dp"
                            android:textColor="@color/white"
                            android:text="Developer :"/>

                        <TextView
                            android:id="@+id/developer_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:text="Name"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_below="@+id/developerInfo"
                        android:layout_width="match_parent"
                        android:id="@+id/supportDetail"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="2dp"
                        android:padding="2dp"
                        android:gravity="center"
                        android:layout_toEndOf="@+id/avatar">

                        <TextView
                            android:id="@+id/Support"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:clickable="true"
                            android:text="support : "/>

                        <TextView
                            android:id="@+id/contact_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:background="@drawable/text_style"
                            android:clickable="true"
                            android:text="contact"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_below="@+id/supportDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/guideDetail"
                        android:layout_marginTop="2dp"
                        android:padding="2dp"
                        android:gravity="center"
                        android:layout_toEndOf="@+id/avatar">

                        <TextView
                            android:id="@+id/guide_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:clickable="true"
                            android:background="@drawable/text_style"
                            android:text="Guide"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_below="@+id/guideDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp"
                        android:id="@+id/changelogs"
                        android:padding="2dp"
                        android:gravity="center"
                        android:layout_toEndOf="@+id/avatar">

                        <TextView
                            android:id="@+id/changelogs_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:clickable="true"
                            android:background="@drawable/text_style"
                            android:text="ChangeLogs"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_below="@+id/changelogs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp"
                        android:padding="2dp"
                        android:gravity="center"
                        android:layout_toEndOf="@+id/avatar">

                        <TextView
                            android:id="@+id/licenses_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:clickable="true"
                            android:background="@drawable/text_style"
                            android:text="Licenses"/>

                    </LinearLayout>

                    <com.rks.musicx.misc.widgets.CircleImageView
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:src="@drawable/user"
                        android:padding="10dp"
                        android:scaleType="centerCrop"
                        app:border_color="@color/white"
                        app:border_width="4dp"
                        android:id="@+id/avatar"
                        android:layout_centerInParent="true"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/appcr"
            android:textSize="20sp"
            android:id="@+id/licenses"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>